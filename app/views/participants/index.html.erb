<div class="page-header">
  <h1>
    Participants
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>User</th>
        <th>Trip</th>
        <th>Actions</th>
      </tr>

      <% @participants.each do |participant| %>
      <tr>
        <td><img width=100px src="<%= participant.user.image %>"></td>
        <td><%= participant.user.first_name %></td>
        <td><%= participant.trip.title %></td>
        <td>
          <a href="/participants/<%= participant.id %>" class="btn btn-primary">Show</a>
          <a href="/delete_participant/<%= participant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
