<!-- Validation failure messages -->
<% if @trip.errors.any? %>
  <% @trip.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Trip #<%= @trip.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_trip/<%= @trip.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @trip.title %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label" value="<%= @trip.user_id %>">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @trip.user_id %>">
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label" value="<%= @trip.location %>">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @trip.location %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label" value="<%= @trip.image %>">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @trip.image %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label" value="<%= @trip.description %>">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @trip.description %>">
      </div>

      <!-- Label and input for estimated_cost -->
      <div class="form-group">
        <label for="estimated_cost" class="control-label" value="<%= @trip.estimated_cost %>">
          Estimated cost
        </label>

        <input type="text" id="estimated_cost" name="estimated_cost" placeholder="Estimated cost" class="form-control" value="<%= @trip.estimated_cost %>">
      </div>

      <!-- Label and input for date -->
      <div class='input-group date' id='datetimepicker1'>
        <label for="date" class="control-label" value="<%= @trip.date %>">
          Date
        </label>
  <input type='text' class="form-control" name="date" id="date" value="<%= @trip.date %>">
  <span class="input-group-addon">
    <span class="glyphicon glyphicon-calendar"></span>
  </span>
</div>

      <!-- Label and input for minimum_number_of_participants -->
      <div class="form-group">
        <label for="minimum_number_of_participants" class="control-label" value="<%= @trip.minimum_number_of_participants %>">
          Minimum number of participants
        </label>

        <input type="text" id="minimum_number_of_participants" name="minimum_number_of_participants" placeholder="Minimum number of participants" class="form-control" value="<%= @trip.minimum_number_of_participants %>">
      </div>

      <button class="btn btn-warning">
        Update Trip
      </button>
      or
      <a href="/trips/<%= @trip.id %>">Cancel</a>
    </form>
  </div>
</div>
